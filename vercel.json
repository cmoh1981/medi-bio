{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ],
  "crons": [
    {
      "path": "/api/cron/daily",
      "schedule": "0 21 * * *"
    }
  ]
}
